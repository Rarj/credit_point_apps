<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:behavior_hideable="false"
  app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
  tools:context=".features.bk.ui.report.ReportFragment">

  <com.google.android.material.button.MaterialButton
    android:id="@+id/button_report_harian"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="0dp"
    android:layout_height="60dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:text="Report Harian"
    android:textColor="#000000"
    app:layout_constraintBottom_toTopOf="@id/button_report_bulanan"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0"
    app:layout_constraintVertical_chainStyle="packed"
    app:strokeColor="@color/colorPrimaryDark"
    app:strokeWidth="2dp" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/button_report_bulanan"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="0dp"
    android:layout_height="60dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:text="Report Bulanan"
    android:textColor="#000000"
    app:layout_constraintBottom_toTopOf="@id/button_report_tahunan"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/button_report_harian"
    app:strokeColor="@color/colorPrimaryDark"
    app:strokeWidth="2dp" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/button_report_tahunan"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="0dp"
    android:layout_height="60dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:text="Report Tahunan"
    android:textColor="#000000"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/button_report_bulanan"
    app:strokeColor="@color/colorPrimaryDark"
    app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>