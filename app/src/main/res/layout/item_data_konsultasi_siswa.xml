<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">
  <data>
    <variable
      name="model"
      type="String" />
  </data>
  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container_konsultasi_siswa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="#F1F1F1"
    android:padding="8dp">

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/text_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      app:layout_constraintEnd_toStartOf="@id/button_whatsapp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Siswa Ganteng" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/text_kategori"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      app:layout_constraintEnd_toStartOf="@id/button_whatsapp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/text_name"
      tools:text="Kelas 7A" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/text_date_created"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="8dp"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      app:layout_constraintEnd_toStartOf="@id/button_whatsapp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/text_kategori"
      tools:text="Date created : 2019-01-01" />

    <androidx.appcompat.widget.AppCompatImageButton
      android:id="@+id/button_whatsapp"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:background="@null"
      android:src="@drawable/ic_whatsapp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
